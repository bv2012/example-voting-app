pipeline {

  agent none
  stages{
      stage("build"){
        when{
            changeset "**/result/**"
          }

        agent {
          docker {
            image 'node:8.9.0'

          }
        }

        steps{
          echo 'Compiling result app..'
          dir('result'){
            sh 'npm install'
          }
        }
      }
      stage("test"){
        when{
          changeset "**/result/**"
        }
        agent {
          docker {
            image 'node:8.9.0'

          }
        }
        steps{
          echo 'Running Unit Tets on result app..'
          dir('result'){
            sh 'npm install'
            sh 'npm test'
           }

          }
      }
      
      
  }

  post{
    always{
        echo 'Building multibranch pipeline for worker is completed..'
    }
  }
}